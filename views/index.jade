extends layout

block content
  div.row.album-images
    div.albums.hidden-xs
      div#album-1.album
        div.album-content
      div#album-2.album
        div.album-content
          span.coming-soon coming soon...
  div.row.buttons.hidden-sm.hidden-xs
    div.album-1
      div.button.first.download(data-link="/download/album/struggle-makes-sense")
      div.button.buy(data-link="https://lightofdisaster.bandcamp.com/releases")
    div.album-2
      div.button.first.download(data-link="#")
      div.button.buy(data-link="#")

  script.
    //download links
    var struggleMakesSenseDownloadButton = document.querySelector('.album-1 .button.download');
    var struggleMakesSenseBuyButton = document.querySelector('.album-1 .button.buy');

    struggleMakesSenseDownloadButton.onclick = function (evt) {
      var targetElement = evt.target;
      var downloadLink = targetElement.getAttribute('data-link');
      window.location.href = downloadLink;
    };

    struggleMakesSenseBuyButton.onclick = function (evt) {
      var targetElement = evt.target;
      var buyLink = targetElement.getAttribute('data-link');
      window.location.href = buyLink;
    };


